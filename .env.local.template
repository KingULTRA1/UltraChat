# UltraChat Bot Configuration Template - v1.2.3 Alpha
# 
# SECURITY NOTICE: This is a TEMPLATE file for reference only
# Copy this to .env.local and fill in your actual values
# NEVER commit .env.local or any file with real tokens to GitHub
#
# Privacy-First Configuration for Cross-Platform Messaging

# =============================================================================
# ENCRYPTION CONFIGURATION (Required for E2E encryption)
# =============================================================================

# AES-256 Master Key (Generate a secure 32-byte base64 key)
# Use: openssl rand -base64 32
ULTRACHAT_AES_KEY=your_random_32_byte_base64_key_here

# RSA Key Paths for Digital Signatures (2048-bit minimum)
ULTRACHAT_RSA_PRIVATE_KEY_PATH=./keys/ultrachat_rsa_private.pem
ULTRACHAT_RSA_PUBLIC_KEY_PATH=./keys/ultrachat_rsa_public.pem

# =============================================================================
# DISCORD BOT INTEGRATION (Optional)
# =============================================================================

DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_server_id_here
DISCORD_CHANNEL_ID=default_channel_id_here
DISCORD_ENABLE_TIPPING=true
DISCORD_COMMAND_PREFIX=!ultra

# =============================================================================
# TELEGRAM BOT INTEGRATION (Optional)
# =============================================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEFAULT_CHAT_ID=default_chat_id_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_ENABLE_INLINE_KEYBOARD=true

# =============================================================================
# SIGNAL BOT INTEGRATION (Optional - Advanced)
# =============================================================================

SIGNAL_PHONE_NUMBER=+15555555555
SIGNAL_BOT_PATH=/path/to/signal-cli
SIGNAL_ENCRYPTION_KEY_PATH=./keys/signal-keys
SIGNAL_DATA_PATH=./userData/signal

# =============================================================================
# TWITTER/X BOT INTEGRATION (Optional)
# =============================================================================

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# =============================================================================
# ULTRACHAT SECURITY & PRIVACY SETTINGS
# =============================================================================

# File Upload Security
ULTRACHAT_ALLOW_FILE_TYPES=mp3,pdf,png,jpg,mov,doc,txt
ULTRACHAT_MAX_FILE_SIZE_MB=50
ULTRACHAT_SCAN_UPLOADS=true

# Trust & Permission System
ULTRACHAT_TRUSTED_USERS_IDS=comma_separated_user_ids_here
ULTRACHAT_MODERATOR_IDS=comma_separated_moderator_ids_here
ULTRACHAT_REQUIRE_APPROVAL=true

# Crypto Tipping Configuration
ULTRACHAT_ENABLE_TIPPING=true
ULTRACHAT_CRYPTO_OPTIONS=BTC,ETH,DOGE,LTC,SOL,PYTH,LINK
ULTRACHAT_TIP_NOTIFICATIONS=true
ULTRACHAT_MAX_TIP_USD=100

# Web of Trust Settings
ULTRACHAT_WOT_ENABLED=true
ULTRACHAT_AUTO_TRUST_THRESHOLD=75
ULTRACHAT_ENDORSEMENT_REQUIRED=false

# =============================================================================
# AUDIT & LOGGING (Local Only - Never Transmitted)
# =============================================================================

# Audit Trail Configuration
ULTRACHAT_AUDIT_ENABLED=true
ULTRACHAT_AUDIT_LOG_PATH=./audit_logs/
ULTRACHAT_AUDIT_ENCRYPTION=true
ULTRACHAT_AUDIT_RETENTION_DAYS=90

# Local Logging (Development/Debugging)
ULTRACHAT_LOG_LEVEL=info
ULTRACHAT_LOG_PATH=./logs/ultrachat.log
ULTRACHAT_DEBUG_MODE=false
ULTRACHAT_LOG_CRYPTO_OPERATIONS=false

# =============================================================================
# PRIVACY ENFORCEMENT (Cannot be disabled)
# =============================================================================

# These settings enforce privacy and cannot be overridden
ULTRACHAT_ANALYTICS_DISABLED=true
ULTRACHAT_TRACKING_DISABLED=true
ULTRACHAT_TELEMETRY_DISABLED=true
ULTRACHAT_LOCAL_STORAGE_ONLY=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode (affects logging and debugging only)
NODE_ENV=development
ULTRACHAT_DEV_MODE=true
ULTRACHAT_MOCK_EXTERNAL_APIS=false

# Test Configuration
ULTRACHAT_TEST_USER_ID=test_user_123
ULTRACHAT_TEST_CHAT_ID=test_chat_456

# =============================================================================
# SECURITY REMINDERS
# =============================================================================
#
# 1. Generate strong, unique keys for each installation
# 2. Store this file in a secure location with restricted permissions
# 3. Never commit .env.local to version control
# 4. Regularly rotate encryption keys and bot tokens
# 5. Use strong passwords for key file encryption
# 6. Monitor audit logs for suspicious activity
# 7. Keep bot tokens and API keys secure
# 8. Test configuration in development before production use
#
