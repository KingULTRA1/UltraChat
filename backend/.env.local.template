# UltraChat Bot Bridge Configuration Template
# Copy this file to .env.local and fill in your credentials
# NEVER commit .env.local to Git!

# Required: AES-256 encryption key (32 bytes, base64 encoded)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ULTRACHAT_AES_KEY=

# Discord Bot Configuration
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# Telegram Bot Configuration  
TELEGRAM_BOT_TOKEN=

# Twitter/X API Configuration
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Signal Configuration (requires signal-cli)
SIGNAL_PHONE_NUMBER=

# Server Configuration
PORT=3001

# Crypto Tipping Supported Currencies (comma-separated)
ULTRACHAT_CRYPTO_OPTIONS=BTC,ETH,DOGE,LTC,SOL,PYTH,LINK